# Network configuration for nginx reverse proxy setup
# Nginx branch - uses nginx proxy for routing

# Frontend URLs (for React app) - through nginx proxy
REACT_APP_API_URL=http://localhost/api
REACT_APP_OAUTH_ISSUER=http://localhost/dex
REACT_APP_OAUTH_CLIENT_ID=chat-app-dev

# Backend URLs (for Flask app - internal Docker network)
OAUTH_ISSUER=http://oauth-server:5556
OAUTH_CLIENT_ID=chat-app-dev
OAUTH_CLIENT_SECRET=chat-app-dev-secret-12345

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/webapp

# Google Cloud & API Keys (IMPORTANT: Uncommented for DFRP feature)
REACT_APP_GEMINI_API_KEY=your_key_here
GCS_BUCKET_NAME=your_bucket_name

# Additional Flask Configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=development

# GitHub OAuth (if configured)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google Application Credentials (path to your service account key)
GOOGLE_APPLICATION_CREDENTIALS=/app/gcp-key.json 